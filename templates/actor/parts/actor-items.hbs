<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">{{localize "FORMORIA.Weapons"}}</div>
    <div class="item-formula">{{localize "FORMORIA.Attack"}}</div>
    <div class="item-formula">{{localize "FORMORIA.Damage"}}</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create item" data-type="weapon"><i class="fas fa-plus"></i> Add
        item</a>
    </div>
  </li>
  {{#each weapons as |item id|}}
  <li class="item flexrow" data-item-id="{{item._id}}">
    <div class="item-name">
      <div class="item-image">
        <a class="rollable" data-roll-type="weapon"><img src="{{item.img}}" title="{{item.name}}" width="24"
            height="24" /></a>
      </div>
      <h4>{{item.name}} {{#if item.system.quantity}} x{{item.system.quantity}} {{/if}}</h4>
    </div>
    <div class="item-formula item-prop">{{item.system.skillLabel}}+{{item.system.attack}}</div>
    <div class="item-formula item-prop">{{item.system.damage}}+{{item.system.extradamage}}(>5)</div>
    <div class="item-controls">
      <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
      <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
    </div>
  </li>
  {{/each}}
  <br>
  <li class="item flexrow items-header">
    <div class="item-name">{{localize "FORMORIA.Armor"}}</div>
    <div class="item-formula">{{localize "FORMORIA.Defence"}}</div>
    <div class="item-formula">{{localize "FORMORIA.Durability"}}</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create item" data-type="protection"><i class="fas fa-plus"></i> Add
        item</a>
    </div>
  </li>
  {{#each protections as |item id|}}
  <li class="item flexrow" data-item-id="{{item._id}}">
    <div class="item-name">
      <div class="item-image">
        <a class="rollable" data-roll-type="weapon"><img src="{{item.img}}" title="{{item.name}}" width="24"
            height="24" /></a>
      </div>
      <h4>{{item.name}} {{#if item.system.quantity}} x{{item.system.quantity}} {{/if}}</h4>
    </div>
    <div class="item-formula item-prop">{{item.system.defence}}</div>
    <div class="item-formula item-prop">{{item.system.durability}}</div>
    <div class="item-controls">
      <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
      <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
    </div>
  </li>
  {{/each}}
  <br>
  <h3>{{gear.length}}/5</h3>
  <li class="item flexrow items-header">
    <div class="item-name">{{localize "FORMORIA.Items"}}</div>
    <div class="item-formula">{{localize "FORMORIA.Dice"}}</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create modifier" data-type="item"><i class="fas fa-plus"></i> Add
        item</a>
    </div>
  </li>
  {{#each gear as |item id|}}
  <li class="item flexrow" data-item-id="{{item._id}}">
    <div class="item-name">
      <div class="item-image">
        <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24"
            height="24" /></a>
      </div>
      <h4>{{item.name}}</h4>
    </div>
    <div class="item-formula item-prop">{{item.system.formula}}</div>
    <div class="item-controls">
      <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
      <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
    </div>
  </li>
  {{/each}}
</ol>